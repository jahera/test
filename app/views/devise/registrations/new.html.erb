

<!--  page-wrapper -->
  <div class="container">
  <div style="height: 100px">&nbsp;</div>
  <!-- row -->
  <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default"> 
          <div class="panel-heading">
                        <h3 class="panel-title">Sign up</h3>
                    </div>
      <div class="panel-body">      
        <div class="table-responsive">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div style="margin-top: 2%"><%= f.label "User Name" %><br />

              <%= f.text_field :login, autofocus: true,:placeholder => "Enter User Name", :class=>"form-control" %></div>

            <div style="margin-top: 2%"><%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true ,:placeholder => "Enter Email", :class=>"form-control"%></div>

            <div style="margin-top: 2%"><%= f.label :mobile %> &nbsp; <strong>Number </strong><br />
              <%= f.text_field :mobile, autofocus: true,:placeholder => "Enter Administrator Mobile No", :class=>"form-control" %></div>

            <div style="margin-top: 2%"><%= f.label :imei %><br />
              <%= f.text_field :imei, autofocus: true,:placeholder => "Enter IMEI No ", :class=>"form-control" %></div>

            <div style="margin-top: 2%"><%= f.label :password %> 
              <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />

              <%= f.password_field :password, autocomplete: "off",:placeholder => "Enter Password", :class=>"form-control" %></div>

            <div style="margin-top: 2%"><%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation,:placeholder => "Enter Confirm Password", autocomplete: "off", :class=>"form-control" %></div>



            <div style="margin-top: 2%"><%= f.submit "Sign up", :class=>"btn btn-lg btn-info btn-block" %></div>
          <% end %>
        </div>          
      </div>
    </div>
      </div>
  </div>
  <!-- end row -->


</div>
<!-- end page-wrapper -->



<%#= render "devise/shared/links" %>
