<div class="container">
  <div style="height: 100px">&nbsp;</div>

  <!-- row -->
 <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default"> 
                   <div class="panel-heading">
                     <h2 class="panel-title" style="font-size: 20px;">Log in</h2>
                    </div>
    
      <div class="panel-body">
   
        <div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div><%= f.label :mobile %><br />

              <%= f.text_field :mobile, autofocus: true,:placeholder => "Enter Administrator Mobile No", :class=>"form-control"  %></div>

          <div style="padding-top: 2%;"><%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off",:placeholder => "Enter Password", :class=>"form-control"  %></div>


            <% if devise_mapping.rememberable? -%>
              <div style="padding-top: 2%;"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end -%>

            <div><%= f.submit "Log in",:class=>"btn btn-lg btn-info btn-block" %></div>
          <% end %>
        </div>          
      </div>
   
    </div>
    </div>

  </div>
  <!-- end row -->


</div>
<!-- end page-wrapper -->



