/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
* DataTables features
*/

.dataTables_wrapper {
position: relative;
clear: both;
zoom: 1; /* Feeling sorry for IE */
}

.dataTables_processing {
position: absolute;
top: 50%;
left: 50%;
width: 250px;
height: 30px;
